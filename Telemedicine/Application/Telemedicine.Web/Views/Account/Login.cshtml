
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="row" data-ng-controller="AccountController">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Please Sign In</h3>
            </div>
            <div class="panel-body">
                <form role="form" data-ng-submit="login()">
                    <fieldset>
                        <div class="form-group">
                            <input class="form-control"
                                   placeholder="Login"
                                   name="login"
                                   required
                                   type="text"
                                   pattern=".{3,}"   
                                   title="3 characters minimum"
                                   data-ng-model="credentials.login">
                        </div>
                        <div class="form-group">
                            <input class="form-control"
                                   placeholder="Password"
                                   name="password"
                                   pattern=".{3,}"   
                                   title="3 characters minimum"
                                   required
                                   type="password"
                                   data-ng-model="credentials.password">
                        </div>
                        <div class="form-inline">
                            <div class="checkbox pull-left remember-me">
                                <label>
                                    <input name="remember"
                                           value="Remember Me"
                                           type="checkbox"
                                           data-ng-model="credentials.rememberMe">
                                    <span>Remember Me</span>
                                </label>
                            </div>
                            <a class="btn btn-link pull-right" href="/Account/Register">
                                Sigh Up
                            </a>
                        </div>
                        <!-- Change this to a button or input when using this as a form -->
                        <button type="submit" class="btn btn-lg btn-success btn-block">Login</button>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
